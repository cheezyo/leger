<div class="fieldWrapper">
<fieldset class="colored">
  <%= f.label :title, "Navn på under kategori", :class => "big" %><br />
  <%= f.text_field :title %><br />
    <%= f.label :picture, "Bilde" %><br />
  <%= f.text_field :picture %><br />
   <%= f.label :price, "Pris" %><br />
  <%= f.text_field :price %><br />
  <%= f.label :content, "Intro tekst" %><br />
  <%= f.text_area :content, :cols => 40, :rows => 15, :class => "widgEditor" %>
