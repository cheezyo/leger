<% @siders.each do |sider| %>
  <tr>
    <td><%= sider.title %></td>
    <td><%= sider.content %></td>
    <td><%= link_to 'Show', sider %></td>
    <td><%= link_to 'Edit', edit_sider_path(sider) %></td>
    <td><%= link_to 'Destroy', sider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

