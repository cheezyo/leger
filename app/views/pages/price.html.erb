<script>

function renderPrice(n, clickedlink, tot){
	var x=document.getElementById("widePrice");
			 var y = document.getElementById(n);
  			 x.innerHTML= y.innerHTML;
		 
  			
  			 for(var i = 1; i < tot; i++){
  			 	if(n == i){
  			 		
  			 		document.getElementById(clickedlink).style.background = "#CDE4F2";
  			 	}else{
  			 		var temp = "link"+i;

  			 		document.getElementById(temp).style.background = "#fff";
  			 	}
  			 }
}

</script>

<div id="leftSidePrice">
		<% n = 1 %>
		<% total = Kirurgi.count + Hud.count %>
		
	<% Kirurgi.find(:all).each do |k| %>
	 	<a href="#" id="link<%= n %>" onclick="renderPrice(<%=n%>, '<%= "link" + n.to_s%>', '<%= total%>')" <% if n == 1 %> style="background:#CDE4F2;" <% end %>> <%= k.name %></a><br />
		
		<div id="<%= n %>" style="display: none;">
			<h3 style="padding:0 0 10px 0;">Pris liste</h3>
			<% k.types.each do |t| %>
				
				<div class="price">	<p><%= t.title %> ................... <%= t.price %></p></div><br />
			<% end %>	
			
		</div>
		
		<% n+= 1 %>
	<% end %>
		
		<a href="#" id="link<%= n %>" onclick="renderPrice(<%= n %>, '<%= "link"+n.to_s%>', '<%= total%>')">Hudbehandlinger</a>
		
		<div id="<%= n %>" style="display: none;">
			<h3 style="padding:0 0 10px 0;">Pris liste</h3>
			<% Hud.find(:all).each do |h| %>
				<div class="price"><p><%= h.title %> ................... <%= h.price %></p></div><br />
			<% end %>
		</div>
		
		
</div>

<div id="widePrice">
	<% Kirurgi.find(:all).each do |ki| %>
	<div id="<%= n %>" >
			<h3 style="padding:0 0 10px 0;">Pris liste</h3>
			<% ki.types.each do |ti| %>
				<div class="price"><p><%= ti.title %> ................... <%= ti.price %></p></div><br />
			<% end %>
			<% break %>
			<% end %>
		</div>
	

</div>
